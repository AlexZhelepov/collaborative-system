@model UserCompetenceEditViewModel

<h2>Пользователь</h2>

<div class="row">
    <div class="col-md-6">
        <form id="user-info-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="@Model.UserCompetence.UserInfoId" class="form-control" type="hidden" />
                <span asp-validation-for="@Model.UserCompetence.UserInfoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.UserCompetence.CompetenceId"></label>
                <select class="data-select-list" asp-for="@Model.UserCompetence.CompetenceId" asp-items="@Model.Competences"></select>
                <span asp-validation-for="@Model.UserCompetence.CompetenceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.UserCompetence.LevelId"></label>
                <select class="data-select-list" asp-for="@Model.UserCompetence.LevelId" asp-items="@Model.Levels"></select>
                <span asp-validation-for="@Model.UserCompetence.LevelId" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Сохранить</button>
        </form>
    </div>
</div>