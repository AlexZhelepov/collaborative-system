@model IEnumerable<OntologyViewModel>

<h1>Онтология</h1>

<table class="table">
    <tr>
        <th>Тип класса</th>
        <th>Класс</th>
        <th colspan="2">Действия</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Class.Name
            </td>
            <td>
                @item.Element.Name
            </td>
            <td>
                <a class="btn btn-sm btn-primary" asp-controller="Ontology" asp-action="Edit" asp-route-id="@item.Element.Id">Редактировать</a>
            </td>
            <td>
                <form asp-controller="Ontology" asp-action="Delete" asp-route-id="@item.Element.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>

<a class="btn btn-sm btn-primary" asp-controller="Ontology" asp-action="Edit">Создать элемент</a>

