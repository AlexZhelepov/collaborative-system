@model IEnumerable<diploma.Data.Entities.Project>

<h2>Проекты</h2>

<table class="table">
    <tr>
        <th>Наименование</th>
        <th>Описание</th>
        <th>Дата начала</th>
        <th>Дата окончания</th>
        <th colspan="3">Действия</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.DateStart</td>
            <td>@item.DateEnd</td>
            <td>
                <a class="btn btn-sm btn-primary" asp-controller="Project" asp-action="Details" asp-route-id="@item.Id">Вакансии</a>
            </td>
            <td>
                <a class="btn btn-sm btn-primary" asp-controller="Project" asp-action="Edit" asp-route-id="@item.Id">Редактировать</a>
            </td>
            <td>
                <form asp-controller="Project" asp-action="Delete" asp-route-id="@item.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>

<a class="btn btn-sm btn-primary" asp-controller="Project" asp-action="Edit">Добавить проект</a>

