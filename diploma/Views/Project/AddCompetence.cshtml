@model VacancyCompetenceEditViewModel

<h2>Добавить компетенцию</h2>

<div class="row">
    <div class="col-md-6">
        <form id="user-info-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="@Model.Competence.VacancyId" class="form-control" type="hidden">
                <span asp-validation-for="@Model.Competence.VacancyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Competence.CompetenceId"></label>
                <select class="data-select-list" asp-for="@Model.Competence.CompetenceId" asp-items="@Model.Competences"></select>
                <span asp-validation-for="@Model.Competence.CompetenceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Competence.LevelId"></label>
                <select class="data-select-list" asp-for="@Model.Competence.LevelId" asp-items="@Model.Levels"></select>
                <span asp-validation-for="@Model.Competence.LevelId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Сохранить</button>
        </form>
    </div>
</div>
